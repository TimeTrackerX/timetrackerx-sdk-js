{
    "name": "timetrackerx-sdk-js",
    "version": "0.0.0",
    "description": "The Javascript SDK for the TimeTrackerX api",
    "main": "dist/index.js",
    "repository": "git@github.com:TimeTrackerX/timetrackerx-sdk-js.git",
    "author": "Angel S. Moreno <angelxmoreno@gmail.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "build": "tsc",
        "prebuild": "rimraf dist",
        "lint": "eslint . --ext ts,json --cache",
        "lint:fix": "bun lint --fix",
        "test": "ts-mocha -p tsconfig.json tests/**/*.spec.ts",
        "test:coverage": "nyc npm run test",
        "prepare": "husky install"
    },
    "dependencies": {
        "@types/dirty-chai": "^2.0.4",
        "axios": "^1.6.2",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "pino": "^8.17.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.4.3",
        "@commitlint/config-conventional": "^18.4.3",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@swc/core": "^1.3.101",
        "@swc/helpers": "^0.5.3",
        "@types/chai": "^4.3.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/lodash": "^4.14.202",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.10.5",
        "@types/sinon": "^17.0.2",
        "bun-types": "latest",
        "chai": "^4.3.10",
        "dirty-chai": "^2.0.1",
        "eslint": "^8.56.0",
        "eslint-config-universe": "^12.0.0",
        "eslint-plugin-md": "^1.0.19",
        "husky": "^8.0.0",
        "lint-staged": "^15.2.0",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "pino-pretty": "^10.3.0",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "sinon": "^17.0.1",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.2",
        "tslib": "^2.6.2"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": [
            "**/dist/**"
        ],
        "extends": [
            "universe",
            "plugin:md/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "overrides": [
            {
                "files": [
                    "*.json"
                ],
                "rules": {
                    "no-unused-expressions": "off"
                }
            },
            {
                "files": [
                    "*.md"
                ],
                "parser": "markdown-eslint-parser",
                "rules": {
                    "prettier/prettier": [
                        "error",
                        {
                            "parser": "markdown"
                        }
                    ]
                }
            }
        ],
        "rules": {
            "md/remark": [
                "error",
                {
                    "plugins": [
                        [
                            "lint-maximum-line-length",
                            false
                        ]
                    ]
                }
            ]
        }
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "semi": true,
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 120
    },
    "lint-staged": {
        "*.{ts,json}": "eslint --fix",
        "*.md": "prettier --write"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "check-coverage": true,
        "all": true,
        "include": [
            "src/**"
        ],
        "exclude": [
            "src/index.ts"
        ],
        "reporter": [
            "html",
            "lcov",
            "text",
            "text-summary"
        ],
        "report-dir": "coverage"
    }
}
